<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishActivity">

    <ImageView
        android:id="@+id/ivFinish"
        android:layout_width="315dp"
        android:layout_height="289dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/icon_congrats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCongrats"
        android:layout_width="277dp"
        android:layout_height="60dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Congratulation, You Have Finished Your Workout"
        android:textColor="#1D1617"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFinish" />

    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="315dp"
        android:layout_height="36dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Exercises is king and nutrition is queen. Combine the two and you will have a kingdom"
        android:textColor="#7B6F72"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCongrats" />

    <TextView
        android:id="@+id/tvJack"
        android:layout_width="99dp"
        android:layout_height="18dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="-Jack Lalanne"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetail" />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="315dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#92A3FD"
        android:fontFamily="@font/poppins_semibold"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJack" />


</androidx.constraintlayout.widget.ConstraintLayout>